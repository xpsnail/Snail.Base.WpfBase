<UserControl x:Class="UIDemo.UserControlViews.CardViews"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UIDemo.UserControlViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
        <TextBlock FontSize="30" VerticalAlignment="Center" Text="{Binding strCondition}"></TextBlock>

        <Path x:Name="imageDelete" Grid.Row="0" Grid.Column="1" 
                    Data="m 0,0 200,5 60,100 z" Fill="Blue" 
                    MouseDown="btnDelete"></Path>
    </Grid>
</UserControl>
