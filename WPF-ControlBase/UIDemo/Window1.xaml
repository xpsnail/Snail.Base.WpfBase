        xmlns:uc="clr-namespace:UIDemo.UserControlViews"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="87*"/>
            <RowDefinition Height="332*"/>
        </Grid.RowDefinitions>
